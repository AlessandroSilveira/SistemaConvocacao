@{
    ViewBag.Title = "Classificados Por Cargo.";
}
<h2>@ViewBag.Title</h2>
@using (Html.BeginForm("ClassificadosPorCargo", "Relatorio", FormMethod.Post, new { @id = "form" }))
{

    <table class="table">
        <tr>
            <th>
                Escolha um Cargo:
            </th>
            <th>
                <select name="cargo" class="form-control">
                    <option>Selecione</option>
                    @foreach (var itens in ViewBag.ListaCargos)
                    {
                        <option value="@itens.CargoId">@itens.Nome</option>
                    }
                </select>
                <input type="submit" value="Buscar" class="btn btn-default" />
            </th>
        </tr>
        <tr>
            <td colspan="2">
                <input type="hidden" name="ProcessoId" value="@ViewBag.ProcessoId" />
                
            </td>
        </tr>
    </table>
}
@if (ViewBag.ListaConvocadosPorCargo!=null)
{
    <table class="table">
        <tr>
            <th>Classificação</th>
            <th>Nome</th>
            <th>Inscrição</th>
            <th>Desistência</th>
            <th>Entrou no Sistema</th>
            <th>Compareceu na Entrega da Documentação</th>
            <th>Status da Convocação</th>
        </tr>
        @foreach (var itens in ViewBag.ListaConvocadosPorCargo)
        {
            <tr>
                <td>@itens.Posicao</td>
                <td>@itens.Nome</td>
                <td>@itens.Inscricao</td>
                <td>@itens.Desistente</td>
                <td></td>
                <td>@itens.StatusConvocacao</td>
                <td>@itens.StatusContratacao</td>
            </tr>
        }
    </table>
}
