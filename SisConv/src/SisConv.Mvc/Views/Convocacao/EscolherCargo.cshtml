@model IEnumerable<SisConv.Application.ViewModels.ConvocacaoViewModel>
@{
	ViewBag.Title = "Escolha um cargo";
}

<h2>@ViewBag.DadosConvocacao.Nome</h2>
@using (Html.BeginForm("ListaConvocados", "Convocacao", FormMethod.Post, new { @id = "form" }))
{

	<div class="form-group">
		<div class="col-md-offset-1 col-md-10">
			Escolha um cargo:
			<select name="cargo" class="form-control">
				<option>Selecione</option>
				@foreach (var itens in ViewBag.Cargos)
				{
					<option value="@itens.CargoId">@itens.Nome</option>
				}
			</select>
		</div>
	</div>
	<div class="form-group">
		<div class="col-md-offset-1 col-md-10">
			<input type="submit" value="Salvar" class="btn btn-default" />
		</div>
	</div>
	<input type="hidden" name="Id" value="@ViewBag.Id" />

}
