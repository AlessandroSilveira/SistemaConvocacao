@{
    ViewBag.Title = "Home Page";
}

<div class="bs-docs-section">
    <div class="row">
        <div class="col-lg-12">
        @if (!Request.IsAuthenticated && User.IsInRole("Convocado"))
        {
            <div class="page-header">
                <h1 id="tables">Sistema de Convocações</h1>
            </div>
        }
        else
        {
            <div class="page-header">
                <h1 id="tables"></h1>
            </div>
        }
            <div class="bs-component">

                <table class="table table-striped table-hover ">
                    <tbody>
                    @if (Request.IsAuthenticated && User.IsInRole("Administrator"))
                    {
                        <tr>
                            <td>
                                @Html.ActionLink("Cadastro e Gerenciamento de Clientes", "Index", "Cliente")
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.ActionLink("Cadastro e Gerenciamento de Usuários", "Index", "UsersAdmin")
                            </td>
                        </tr>
                    }
                    @if (Request.IsAuthenticated && User.IsInRole("Cliente"))
                    {
                        <tr>
                            <td>
                                @Html.ActionLink("Cadastro e Gerenciamento de Convocações", "Index", "Processos")
                            </td>
                        </tr>
                    }
                    @if (Request.IsAuthenticated && User.IsInRole("Convocado"))
                    {
                        <div class="container">
                            <div class="jumbotron">
                                <h1>Bem Vindo Nome do Candidato</h1>
                                <p>Bootstrap is the most popular HTML, CSS, and JS framework for developing
                                    responsive, mobile-first projects on the web.</p>
                            </div>
                            <p>This is some text.</p>
                            <p>This is another text.</p>
                        </div>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>