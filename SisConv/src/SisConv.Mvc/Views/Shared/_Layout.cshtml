<!DOCTYPE html>
<html>

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - My ASP.NET Application</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")
</head>

<body>

	<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
		@Html.ActionLink("Sistema de Convocações", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>

		<div class="collapse navbar-collapse" id="navbarColor01">
			<ul class="navbar-nav mr-auto">
				@if (Request.IsAuthenticated && User.IsInRole("Administrator"))
				{
					<li class="nav-item" style="color:white !important">@Html.ActionLink("Home", "Index", "Home", new { @class = "nav-link", @style = "color:white !important" }, null)</li>
					<li class="nav-item" style="color:white !important">@Html.ActionLink("Clientes", "Index", "Cliente", new { @class = "nav-link", @style = "color:white !important" }, null)</li>
					<li class="nav-item" style="color:white !important">@Html.ActionLink("Usuários", "Index", "UserAdmin", new { @class = "nav-link", @style = "color:white !important" }, null)</li>
				}
				@if (Request.IsAuthenticated && User.IsInRole("Cliente"))
				{
					<li class="nav-item" style="color:white !important">@Html.ActionLink("Convocações", "Index", "Processos", new { @class = "nav-link" ,@style="color:white !important"},null)</li>

				}
			</ul>
			@Html.Partial("_LoginPartial")
		</div>
	</nav>
	<div class="container body-content">
		<br>
		
		@RenderBody()
		<hr>
		<footer>
			<p>&copy; @DateTime.Now.Year - Sistema de Convocações.</p>
		</footer>
	</div>
	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	@RenderSection("scripts", false)
</body>

</html>
